<configuration>

  <appender name="ConsoleColorAppender" class="ch.qos.logback.core.ConsoleAppender">
    <layout class="ch.qos.logback.classic.PatternLayout">
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %green([%thread]) %highlight(%level) %logger{50} -
        %msg%n
      </pattern>
    </layout>
  </appender>
  <root level="INFO">
  </root>
</configuration>